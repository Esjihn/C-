<Window x:Class="WeatherConsole.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherConsole"
        mc:Ignorable="d"

        Title="LoginWindow" Height="250" Width="360"
        Background="GhostWhite" BorderThickness="1">
	<Grid>
		<Button Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="160,152,0,0" VerticalAlignment="Top" Width="75" Click="SubmitButton_Click"/>
		<TextBox Name="UserName" HorizontalAlignment="Left" Height="30"  Margin="107,39,0,0" FontSize="16" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
		<PasswordBox Name="PassWord"  HorizontalAlignment="Left" Height="30"  Margin="107,98,0,0" FontSize="16" VerticalAlignment="Top" Width="199" RenderTransformOrigin="0.547,-0.839"/>
		<Label Content="Username" HorizontalAlignment="Left" Margin="44,39,0,0" VerticalAlignment="Top"/>
		<Label Content="Password" HorizontalAlignment="Left" Margin="44,102,0,0" VerticalAlignment="Top"/>


	</Grid>
</Window>
